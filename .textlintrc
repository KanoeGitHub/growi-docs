{
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-weseek": {
      // 英文用ルールだが、日本語文で不要なエラーを吐くので、一時的にfalseにする
      // 将来的にはenフォルダ配下にのみ適用したい
      "ginger": false,
      "no-dead-link": {
        "checkRelative": true,
        "baseURI": "https://docs.growi.org/",
        "ignore": ["http://localhost**"],
      },
      "ja-no-mixed-period": {
        "allowPeriodMarks": ":",
      },
      "max-kanji-continuous-len": {
        "allow": ["証明書文字列","同時接続数上限","同時多人数編集","自動起動設定","全文検索管理"]
      },
    }
  }
}
